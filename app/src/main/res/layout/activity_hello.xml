<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/backgroudcacmon"
    tools:context=".activity.HelloActivity">

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/login11"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="Sign In"
            android:textSize="30dp"
            android:onClick="signIn"
            android:textColor="#000000"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:id="@+id/imgplay"
            android:src="@drawable/playnow"
            android:onClick="playNow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgbackgroud"
            app:layout_constraintVertical_bias="0.371" />

    </LinearLayout>






</LinearLayout>