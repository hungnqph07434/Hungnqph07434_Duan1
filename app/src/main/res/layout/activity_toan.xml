<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroudcacmon"
    android:layout_height="match_parent"
    tools:context=".activity.ToanActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/timeToan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1E2146"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/custom_playconten"
            android:text="Scores:"
            android:textColor="#ffff"
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.013"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvdiemToan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_marginEnd="196dp"
            android:layout_marginRight="196dp"
            android:background="@drawable/custom_playconten"
            android:text="0"
            android:textColor="#ffff"
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTimecoutToan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/custom_playconten"
            android:text="01:30"
            android:textColor="#ffff"
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/tvdiemfas"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tvQuetionToan"
        android:layout_width="match_parent"
        android:layout_height="251dp"
        android:background="@drawable/custom_playconten"
        android:padding="2dp"
        android:text="Từ nào còn thiếu trong câu sau “Thằng Bờm có cái quạt mo/
Phú ông xin đổi…”?"
        android:textColor="#ffff"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:layout_constraintVertical_bias="0.0" />
    <LinearLayout
        android:id="@+id/lrlDaAToan"
        android:layout_width="match_parent"
        android:onClick="clickA"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:background="@drawable/custom_playconten"
        >

        <TextView
            android:id="@+id/tvDaAToan"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"
            android:layout_gravity="right"
            android:text="A  "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvTlAToan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:text="Một đáp án 1"
            android:textColor="#FFF"
            android:textSize="20dp" />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/lrlDaBToan"
        android:layout_width="match_parent"
        android:onClick="clickB"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:background="@drawable/custom_playconten"
        >

        <TextView
            android:id="@+id/tvDaBToan"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"

            android:layout_gravity="right"
            android:text="B  "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvtlBToan"
            android:textColor="#FFF"
            android:layout_marginLeft="2dp"
            android:layout_gravity="center_vertical"
            android:text="Đáp án 2"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lrlDaCToan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:onClick="clickC"
        android:layout_marginTop="2dp"
        android:background="@drawable/custom_playconten"
        >

        <TextView
            android:id="@+id/tvDaCToan"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"

            android:layout_gravity="right"
            android:text="C  "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvTlCToan"
            android:textColor="#FFF"
            android:layout_marginLeft="2dp"
            android:layout_gravity="center_vertical"
            android:text="Đáp án 3"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lrlDaDToan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:onClick="clickD"
        android:layout_marginTop="2dp"
        android:background="@drawable/custom_playconten"
        >

        <TextView
            android:id="@+id/tvDaDToan"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"

            android:layout_gravity="right"
            android:text="D "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvTlDToan"
            android:textColor="#FFF"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center_vertical"
            android:text="Đáp án 4"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="right"
        android:orientation="horizontal">
        <Button
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="Câu Tiếp Theo"
            android:textColor="#FFFF"
            android:textSize="20dp"
            android:id="@+id/btnNextQueToan"
            android:onClick="cauTiepTheo"
            android:background="@drawable/custom_ketquadialog"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.954"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.976" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/setting"
            android:layout_margin="8dp"
            android:layout_gravity="right"
            android:id="@+id/setting_fastToan"
            android:onClick="settingFast"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.954"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.976" />

    </LinearLayout>

</LinearLayout>